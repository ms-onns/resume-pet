{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
        {{> title big=true data='Work history'}}
        <div>
          <ul>
          {{#each works}}
            <li>
              <div>{{position}}</div>

              <br />

              <div>
                {{duration.from}} - 
                {{#if duration.too}} 
                  {{duration.too}} 
                {{else}} 
                  (Досі тут працюю) 
                {{/if}}
              </div>

              <br />

              <div>
                {{#if company.url}}
                  {{> link text=company.name href=company.url blank=true noLine=true }}
                {{else}}
                {{!-- Не забути в майбутнєму через стилі шрифт зробити жирним під strong --}}
                  <span>{{company.name}}</span>
                {{/if}}
              </div>  

              <br />
              <br />

              
              <div>
                <strong>Projects ({{projectAmount}})</strong>
              </div> 

              <br />

              <ul>
                {{#each projects}}
                  <li>
                    <div>{{> link text=name href=url blank=true noLine=true }}</div>
                    <br />
                    <div>
                      <p>{{about}}</p>
                    </div>
                    <br />
                    <div>
                      <em>Project stacks ({{stackAmount}})</em>
                    </div>
                    <br />
                    <div>
                      <ul>
                        {{#each stacks}}
                          <li>{{name}}</li>
                        {{/each}}
                      </ul>
                    </div>
                    <br />
                    <div>
                      <em>Project stacks ({{awardAmount}})</em>
                    </div>
                    <br />
                    <div>
                      <ol>
                        {{#each awords}}
                          <li>{{name}}</li>
                        {{/each}}
                      </ol>
                    </div>
                  </li>
                {{/each}}
              </ul>         
            </li>
          {{/each}}
          </ul>
        </div>
      </section>
    </main>
  {{/with}}
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}