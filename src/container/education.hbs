<div>
  {{#with main}}
    <main>
      <section>
				{{> title big=true data='My educations'}}
        <ul>
          {{#each educations}}
            <li>
              {{name}}
              {{#unless isEnd}} (Ще в процесі) {{/unless}}
            </li>
          {{/each}}
        </ul>
      </section>
      <section>
        <h3>{{> title big=false data='My certificates'}}</h3>
        <ul>
          {{#each certificates}}
            <li>{{name}} ({{id}})</li>
          {{/each}}
        </ul>
      </section>
    </main>
  {{/with}}
</div>